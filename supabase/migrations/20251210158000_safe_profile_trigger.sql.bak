-- Replace the problematic trigger with a safer version
-- This version is more defensive and won't cause signup failures

-- Drop the existing trigger
DROP TRIGGER IF EXISTS on_auth_user_created ON auth.users;

-- Create a safer trigger function
CREATE OR REPLACE FUNCTION public.handle_new_user()
RETURNS trigger AS $$
BEGIN
  -- Only proceed if we have valid user data
  IF new.id IS NOT NULL THEN
    BEGIN
      -- Try to create profile, but don't fail if it doesn't work
      INSERT INTO public.profiles (
        id,
        full_name,
        phone,
        role,
        email_verified
      ) VALUES (
        new.id,
        COALESCE(new.raw_user_meta_data->>'full_name', ''),
        COALESCE(new.raw_user_meta_data->>'phone', ''),
        CASE
          WHEN new.raw_user_meta_data->>'user_type' = 'agent' THEN 'agent'
          WHEN new.raw_user_meta_data->>'user_type' = 'admin' THEN 'admin'
          WHEN new.raw_user_meta_data->>'user_type' = 'developer' THEN 'developer'
          ELSE 'customer'
        END,
        true
      )
      ON CONFLICT (id) DO NOTHING; -- Prevent errors if profile already exists

    EXCEPTION
      WHEN others THEN
        -- Log the error but don't fail the user creation
        RAISE WARNING 'Profile creation failed for user %: %', new.id, SQLERRM;
    END;
  END IF;

  RETURN new;
END;
$$ LANGUAGE plpgsql SECURITY DEFINER;

-- Recreate the trigger
CREATE TRIGGER on_auth_user_created
  AFTER INSERT ON auth.users
  FOR EACH ROW EXECUTE FUNCTION public.handle_new_user();